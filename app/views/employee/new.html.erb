<div class="container">
	<div class="col-sm-offset-3 col-sm-6">
		<div class="row col-md-12">
			<h2>Add New Employee to spreadsheet</h2>
		</div>
		<div class="form-group">
			<div class="row mb-20">
				<div class="col-sm-12 alert alert-danger" id="error-message">
					<p>Both Name and Remuneration are required</p>
				</div>
				<div class="col-sm-12 alert alert-success" id="success-message">
					<p></p>
				</div>
			</div>
			<div class="row mb-20">
				<div class="col-sm-12">
					<label for="name">Name of the Employee</label>
					<input type="text" id="name" name="name" required class="form-control">
				</div>
			</div>
			<div class="row mb-20">
				<div class="col-sm-12">
					<label for="remuneration">Remuneration in rupees</label>
					<input type="number" id="remuneration" name="remuneration" required class="form-control">
				</div>
			</div>
			<div class="row">
				<button class="btn btn-success float-right" id="add-employee">Add Employee</button>
			</div>
		</div>
	</div>
</div>
<div class="loader-container" id="loaderDiv">
	<div class="loader"></div>
</div>