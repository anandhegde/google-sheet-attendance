<div class="container">
	<div class="row">
		<h3 class="text-center">Take attendance for <%= Date.today %></h3>
	</div>
	<div class="table-responsive">          
		<table class="table text-center">
		    <thead>
		      <tr class="row">
		        <th class="col-xs-3 text-center">#</th>
		        <th class="col-xs-3 text-center">Name</th>
		        <th class="col-xs-2 text-center">Attendance</th>
		        <th class="col-xs-2 text-center">Action</th>
				<th class="col-xs-2 text-center">Edit</th>
		      </tr>
		    </thead>
		    <tbody>
		      <% @employeeNames.each_with_index do |employee, index| %>
		      	<tr class="row">
		      		<td class="col-xs-3 index"><%= index+1 %></td>
		      		<td class="col-xs-3 name"><%= employee["name"] %></td>
		      		<% if employee["value"] == "P" %>
		      		<td class="col-xs-2"><input type="checkbox" checked></td>
		      		<% else %>
		      		<td class="col-xs-2"><input type="checkbox"></td>
		      		<% end %>
		      		<td class="col-xs-2 text-center"><button class="btn btn-danger delete">Delete</button></td>
		      		<td class="col-xs-2 text-center"><a href="/employee/<%=index+2%>" target="_blank"><button class="btn btn-primary">Edit</button></a></td>
		      	</tr>
		      <% end %>
		    </tbody>
		</table>
	</div>
	<% if @type === "save" %>
	<button class="btn btn-success float-right" id="submit">Save</button>
	<% else %>
	<button class="btn btn-success float-right" id="submit">Update</button>
	<% end %>
</div>
<div class="loader-container" id="loaderDiv">
	<div class="loader"></div>
</div>