<div class="container">
	<div class="col-sm-offset-3 col-sm-6">
		<div class="row col-md-12">
			<h2>Update Employee <strong><%= @rowData[1][0].capitalize! + @rowData[1][1..-1] %></strong></h2>
		</div>
		<div class="form-group">
			<div class="row mb-20">
				<div class="col-sm-12 alert alert-danger" id="error-message">
					<p>Both Name and Remuneration are required</p>
				</div>
				<div class="col-sm-12 alert alert-success" id="success-message">
					<p></p>
				</div>
			</div>
			<div class="row mb-20">
				<div class="col-sm-12">
					<label for="name">Name of the Employee</label>
					<input type="text" id="name" name="name" required class="form-control" value="<%=@rowData[1]%>">
				</div>
			</div>
			<div class="row mb-20">
				<div class="col-sm-12">
					<label for="remuneration">Remuneration in rupees</label>
					<input type="number" id="remuneration" name="remuneration" required class="form-control" value="<%=@rowData[0].to_i%>">
				</div>
			</div>
			<div class="hide">
				<p id="row-number"><%=@rowNumber%></p>
			</div>
			<div class="row">
				<button class="btn btn-success float-right" id="update-employee">Update Employee</button>
			</div>
		</div>
	</div>
</div>
<div class="loader-container" id="loaderDiv">
	<div class="loader"></div>
</div>